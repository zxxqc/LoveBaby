<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical" xmlns:app1="http://schemas.android.com/apk/res/com.hb.lovebaby">

    <!-- action bar -->
	<com.hb.lovebaby.view.MyActionBar
	    android:id="@+id/action_bar"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/baby_pink"
	    app:title="@string/relationship_with_baby"
	    />
	
	<!-- 分隔线 -->
	<FrameLayout android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/bg_gray"
	    android:layout_marginTop="10dp"/>
	
	<ListView
	    android:id="@+id/relatives_relationship_list"
	    android:layout_height="0dp"
	    android:layout_width="match_parent"
	    android:divider="@color/bg_gray"
	    android:dividerHeight="1dp"
	    android:layout_weight="1">
	    
	</ListView>
	
</LinearLayout>