<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white"
    android:orientation="horizontal" >
    <ImageView 
        android:id="@+id/relative_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_im_avatar_service"
        android:layout_margin="5dp"
        />
<LinearLayout 
    android:layout_toRightOf="@+id/relative_icon"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    >
    <TextView 
       	android:id="@+id/ralation_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grandma"
        android:textColor="@color/bt_dialog_text_color"
        />
     <TextView 
       	android:id="@+id/date_tv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="2017-03-19"
        android:gravity="bottom"
        android:textColor="@color/gray2"
        />
</LinearLayout>
     <ImageView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="right"
         android:src="@drawable/arraw_middle"
         android:layout_alignParentRight="true"
         android:layout_centerVertical="true"
         android:layout_margin="10dp"
         />
</RelativeLayout>
